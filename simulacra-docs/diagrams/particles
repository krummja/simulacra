#background: transparent
#gutter: 30
#stroke: white
#fill: transparent

[   Particle
|   
    + chars: str
    + origin: AreaLocation
    + vx: int 
    + vy: int
    + colors: Tuple<Color>
    + lifespan: int
    - move: Callable
    - next_color: Callable
    - next_char: Callable
|
    + last()
    + next()
]

[   ParticleEmitter
|
    - consoles: Dict<Console>
    - x: int
    - y: int
    - count: int
    - new_particle: Particle
    - lifespan
    + particles
    + time_left
|
    + update()
]

[   ParticleEffect
|
    - console: Console
    - start_frame: int
    - end_frame: int
    - x: int
    - y: int
    - lifespan: int
    - active_systems: List
|
    + reset()
    - update()
    # stop_frame
]

[ParticleEffect]<:-[ExplosionEffect]
[ParticleEmitter]<:-[ExplosionEmitter]
[ExplosionEmitter]<--[ExplosionEffect]
[Particle]<--[ParticleEmitter]
